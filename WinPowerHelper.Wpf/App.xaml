<Application x:Class="WinPowerHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:WinPowerHelper.Wpf.ViewModels"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/Controls.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Themes/Light.Pink.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <viewmodels:MainViewModel x:Key="MainViewModel"/>
            <system:Double x:Key="Window.TitleBar.Height">32</system:Double>
            <system:Double x:Key="FontSize.WindowTitle" >14</system:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
